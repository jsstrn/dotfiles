#!/bin/bash

# Run Stow
ls -d */ | xargs stow -vv

# Run Mackup restore
mackup restore

# Setup preferences for macOS (requires restart)
./macos.sh

# Install applications
./install.sh

# Setup login items
./login-items.sh

echo "Done! You're all set up and ready to go. You may need to restart your computer"

# Prompt user to restart computer
./restart.sh
