# Lock the computer by putting the display to sleep immediately
lock() {
  pmset displaysleepnow
}

# Update all brew formulas
beer() {
  brew update
  brew upgrade
  brew cask outdated | xargs brew cask reinstall
  brew cleanup
  brew cask cleanup
}

# Get your computer's public or private IP address
ip() {
  case $1 in
    'public' | 'external' )
      curl ifconfig.me
      ;;
    'private' | 'internal' | 'local' )
      ipconfig getifaddr en0
      ;;
    * )
      echo -e "游니  ip public     - shows the public ip address"
      echo -e "游니  ip private    - shows the private ip address"
      ;;
  esac
}

# Turn on/off your wifi (usage: wifi on)
wifi() {
  case $1 in
    'on' | 'off' )
      networksetup -setairportpower en0 $1
      ;;
    'status' )
      networksetup -getairportnetwork en0
      ;;
    * )
      echo -e "游니  wifi on     - turn on wifi"
      echo -e "游니  wifi off    - turn off wifi"
      echo -e "游니  wifi status - check wifi status"
      ;;
  esac
}

# Check what's running on a specific port number (usage: $ port 8080)
port() {
  lsof -n -i4TCP:$1 | grep LISTEN
}

# Find process id of a given app (usage: $ pid node)
pid() {
  ps ax | grep $1
}

